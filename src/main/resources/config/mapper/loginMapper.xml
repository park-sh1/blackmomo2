<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.blackmomo.mapper.LoginMapper">

    <!-- 회원 -->
    <resultMap type="com.example.blackmomo.domain.Member" id="memberResultMap">
        <id     column="user_no"          property="userId"/>
        <result column="user_id"          property="userId"/>
        <result column="pass"             property="pass"/>
        <result column="pass_check"       property="passCheck"/>
        <result column="name"             property="name"/>
        <result column="nickname"         property="nickname"/>
        <result column="email"            property="email"/>
        <result column="zip_code"         property="zipCode"/>
        <result column="base_address"     property="baseAddress"/>
        <result column="detailed_address" property="detailedAddress"/>
        <result column="phone_number"     property="phoneNumber"/>
        <result column="gender"           property="gender"/>
        <result column="date_of_birth"    property="dateOfBirth"/>
        <result column="interest1"        property="interest1"/>
        <result column="interest2"        property="interest2"/>
        <result column="interest3"        property="interest3"/>
        <result column="registered_date"  property="registeredDete"/>
        <result column="modified_date"    property="modifiedDate"/>
        <result column="secession_date"   property="secessionDate"/>
        <result column="last_login_date"  property="lastLoginDate"/>
        <result column="mb_level"         property="mbLevel"/>
        <result column="certification_yn" property="certificationYn"/>
        <result column="use_yn"           property="useYn"/>
        <result column="delete_yn"        property="deleteYn"/>
    </resultMap>

    <!-- 회원정보 컬럼 -->
    <sql id="column">
        user_no
        ,user_id
        ,pass
        ,pass_check
        ,name
        ,nickname
        ,email
        ,zip_code
        ,base_address
        ,detailed_address
        ,phone_number
        ,gender
        ,date_of_birth
        ,interest1
        ,interest2
        ,interest3
        ,registered_date
        ,modified_date
        ,secession_date
        ,last_login_date
        ,mb_level
        ,certification_yn
        ,use_yn
        ,delete_yn
    </sql>

    <!-- 아이디 중복체크 -->
    <select id="idCheck" resultType="int">
        select COUNT(user_id) from member where user_id = #{userId};
    </select>

    <!-- 전화번호 등록체크 -->
    <select id="phoneCheck">
        select COUNT(phone_number) from member where phone_number = #{phone_number}
    </select>

    <!-- 회원가입 -->
    <insert id="insert">
        insert into member (<include refid="column" />)
        value
            ((select IFNULL(max(user_no)+'1','1') from member b)
            ,#{userId}
            ,#{pass}
            ,#{pass_check}
            ,#{name}
            ,#{nickname}
            ,#{email}
            ,#{zipCode}
            ,#{baseAddress}
            ,#{detailedAddress}
            ,#{phoneNumber}
            ,#{gender}
            ,#{dateOfBirth}
            ,#{interest1}
            ,#{interest2}
            ,#{interest3}
            ,sysdate()
            ,sysdate()
            ,''
            ,sysdate()
            ,#{mbLevel}
            ,#{certificationYn}
            ,'Y'
            ,'N'
            )
    </insert>

    <!-- 회원수정 -->
    <insert id="update">
        update member
        set
        ,pass = #{pass}
        ,passCheck = #{pass_check}
        ,nickname = #{nickname}
        ,email = #{email}
        ,zip_code = #{zipCode}
        ,base_address = #{baseAddress}
        ,detailed_address = #{detailedAddress}
        ,#{phoneNumber}
        ,#{dateOfBirth}
        ,#{interest1}
        ,#{interest2}
        ,#{interest3}
        ,sysdate()
        ,''
        ,sysdate()
        ,#{mbLevel}
        ,#{certificationYn}
        ,'Y'
        ,'N'
        )
    </insert>
    <!-- 회원삭제 -->

    <!--  -->
</mapper>